/* prog13_4, 使用#ifdef、#else與#endif指令 */
#include <stdio.h>
#include <stdlib.h>
#define STTR "Hello C language.\n"    	/* 定義STR為一個字串 */
int main(void)
{
   #ifdef STR              				/* 如果STR已被定義了 */
      printf(STR);

   #else               					/* 如果STR沒有被定義 */
   #error "錯誤 STR沒有被定義過"

   #endif

   system("pause");
   return 0;
}
