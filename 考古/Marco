#define MIN(A, B) ((A) <= (B) ? (A) : (B))

#include <stdio.h>
#include <stdlib.h>


int main(void)
{
    int a=1,b=3;
    int *p=&a;

    printf("*p=%d\n",*p);
    printf("1p=%d\n",p);
    printf("*p++=%d\n",*p++ + *p++);
    printf("*p=%d\n",*p);


    printf("%d\n",MIN(*p++,b));
    printf("*p=%d\n",*p);
    printf("2p=%d\n",p);



    return 0;
}
